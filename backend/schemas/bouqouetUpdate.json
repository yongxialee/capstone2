{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/productUpdate.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "price": {
            "type": "integer",
            "minimum": 0
        },
        "currency": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
        },
        "image": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300
        }
    }
}